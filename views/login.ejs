    <!-- Login Toggle Form -->
    <div class="container">
      <div class="container-left">
        <div id="adminForm" class="form-container active">
          <h2
            style="
              font-weight: 700;
              color: black;
              padding-bottom: 19px;
              font-size: 25px;
            "
          >
            Admin Login
          </h2>
          <form action="/admin" method="POST">
            <input
              class="box"
              type="text"
              name="AdminEmail"
              placeholder="Enter Admin User ID"
              required
            />
            <input
              class="box"
              type="password"
              name="AdminPassword"
              placeholder="Enter Password"
              required
            />
            <button
              style="
                margin-top: 5px;
                padding: 10px 26px;
                color: white;
                font-size: 16px;
                border: none;
                border-radius: 4px;
                width: 92%;
                margin-bottom: 22px;
                background-color: #4353b7;
              "
              type="submit"
              name="AdminButton"
              class="btn btn-primary w-100"
            >
              Log In
            </button>
          </form>
        </div>

        <div id="userForm" class="form-container">
          <h2
            style="
              font-weight: 700;
              color: black;
              padding-bottom: 19px;
              font-size: 25px;
            "
          >
            Student Login
          </h2>
          <form action="/login" method="POST">
            <input
              class="box"
              type="text"
              name="LoginName"
              placeholder="Enter User ID"
              required
            />
            <input
              class="box"
              type="password"
              name="LoginPassword"
              placeholder="Enter Password"
              required
            />
            <button
              style="
                margin-top: 5px;
                padding: 10px 26px;
                color: white;
                font-size: 16px;
                border: none;
                border-radius: 4px;
                width: 92%;

                margin-bottom: 22px;
                background-color: #4353b7;
              "
              type="submit"
              name="LoginButton"
              class="btn btn-primary w-100"
            >
              Login
            </button>
          </form>
        </div>
        <div class="toggle-btn">
          <button id="adminToggle" class="active" onclick="toggleForm('admin')">
            Admin
          </button>
          <button id="userToggle" onclick="toggleForm('user')">User</button>
        </div>
        <div class="form-footer">
          <p>
            No account?
            <a style="color: #4353b7" href="/registration">Register</a>
          </p>
        </div>
      </div>

      <div class="image-section">
        <img src="./Images/1.svg" alt="Bitquark Technologies" />
      </div>
    </div>
